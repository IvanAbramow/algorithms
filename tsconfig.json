{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
